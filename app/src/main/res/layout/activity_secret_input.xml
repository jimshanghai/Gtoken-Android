<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:minHeight="?actionBarSize">

        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_22"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/back_icon" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="输入秘钥登录"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_109"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_43"
        android:src="@drawable/logo_icon"
        />

    <EditText
        android:id="@+id/et_secret"
        android:layout_below="@id/et_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_44"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColorHint="#777777"
        android:drawablePadding="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_38"
        android:background="@drawable/shap_et_input_normal"
        />
    <com.netban.edc.wallet.view.widget.NoneButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_32"
        android:text="下一步"
        android:textColor="#ffffff"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/shap_btn_login_normal"/>
</LinearLayout>