<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9FD"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#ffffff"
        android:minHeight="@dimen/dp_44">

        <LinearLayout
            android:id="@+id/img_back"
            android:layout_width="@dimen/dp_22"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:src="@drawable/back_icon" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/details_ensure_send_trade"
            android:textColor="#333333"
            android:textSize="@dimen/sp_18" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_148"
        android:background="@drawable/bg_h_w">

        <LinearLayout
            android:id="@+id/layout_out"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.netban.edc.wallet.view.widget.RingImageView
                android:id="@+id/img_out"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_name_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:maxLength="8"
                android:gravity="center"
                android:text="---"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_in"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_22"
            android:orientation="vertical">

            <com.netban.edc.wallet.view.widget.RingImageView
                android:id="@+id/img_in"
                android:layout_width="@dimen/dp_74"
                android:layout_height="@dimen/dp_74"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_name_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:text="---"
                android:maxLength="8"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/layout_in"
            android:layout_toRightOf="@id/layout_out"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25">

                <TextView
                    android:id="@+id/tv_num_trade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:inputType="numberDecimal"
                    android:maxLength="9"
                    android:minHeight="@dimen/dp_14"
                    android:text=""
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/out_go" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_collage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="----------"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_19"
        android:paddingRight="@dimen/dp_19">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_59">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/amount_list_trade"
                android:textColor="#ff5b87f4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="---"
                android:textColor="#ff4b4b4b"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffeeeeee" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dp_59">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/time_ensure_send_trade"
                android:textColor="#ff5b87f4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="---"
                android:textColor="#ff4b4b4b"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="337dp"
            android:layout_height="1dp"
            android:background="#ffeeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:minHeight="@dimen/dp_59"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/remark_list_trade"
                android:textColor="#ff5b87f4"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_8"
                android:text="------"
                android:textColor="#4B4B4B"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_ensure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shap_btn_login_normal"
        android:text="@string/confirm_ensure_send_trade"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_16" />
</LinearLayout>